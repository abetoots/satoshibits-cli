{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "pre-commit": {
      "dependsOn": ["^pre-commit"]
    },
    "test": {
      "dependsOn": ["build", "^test"]
    },
    "test:e2e": {
      "dependsOn": ["build"]
    }
  }
}
