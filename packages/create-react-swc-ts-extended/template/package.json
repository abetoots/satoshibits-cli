  "license": "MIT",
  "private": true,
  "version": "0.0.0",
  "author": {
    "email": "caymo.abesuni@gmail.com",
    "name": "Abe Suni M. Caymo",
    "url": "https://github.com/abetoots"
  },
  "type": "module",
  "scripts": {
    "commit": "cz",
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepare": "husky",
    "test": "vitest run",
