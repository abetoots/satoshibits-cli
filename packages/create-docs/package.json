{
  "name": "@satoshibits/create-docs",
  "version": "1.0.2",
  "description": "CLI for generating standardized document templates (BRD, FRD, ADD, TSD)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "create-docs": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "pre-commit": "pnpm exec lint-staged -c ./.lintstagedrc.mjs --concurrent false"
  },
  "keywords": [
    "documentation",
    "templates",
    "cli",
    "brd",
    "frd",
    "add",
    "tsd",
    "architecture"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@repo/typescript-config": "workspace:^",
    "@satoshibits/eslint-config": "workspace:^",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.0",
    "@typescript-eslint/utils": "^8.53.0",
    "eslint": "^9.39.2",
    "jiti": "^2.3.3",
    "lint-staged": "^15.2.10",
    "typescript": "^5.3.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
